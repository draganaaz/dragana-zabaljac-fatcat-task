{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": ["esnext", "dom", "dom.iterable"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "target": "es6",
        "paths": {
            "@homework-task/*": ["src/*"]
        }
    },
    "include": ["src", "global.d.ts"],
    "exclude": ["node_modules", "dist"]
}
